        <Button Style="{DynamicResource SquareButtonStyle}" BorderBrush="#FF505050" Click="Btn_getNewVersion_Click" x:Name="btn_getNewVersion" Content="立即更新" HorizontalAlignment="Center" Height="40" Margin="0,125,0,0" VerticalAlignment="Center" Width="120" FontWeight="Normal" FontSize="12"/>
        <iconPacks:PackIconFontAwesome x:Name="status_icon" Kind="DownloadSolid"  VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="DeepSkyBlue" Height="80" Width="80" Margin="0,0,0,111"  />
        <Controls:MetroProgressBar x:Name="pbar" Height="20" Margin="60,225,60,0" Value="50"/>
    </Grid>
</Page>
