<Page x:Class="fileShredder.page.version_check"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:fileShredder.page"
      xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
      xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
      mc:Ignorable="d"
      Title="version_check" Height="348.094" Width="297.631">

    <Grid>
        <Controls:ProgressRing x:Name="pRing" Margin="0,0,0,108" Height="80" Width="80"></Controls:ProgressRing>
